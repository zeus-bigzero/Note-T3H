<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F6"
    tools:context=".Home_screen">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:background="@color/bottom_nav_color_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="172dp"
            android:layout_height="18dp"
            android:layout_marginTop="52dp"
            android:layout_marginLeft="22dp"
            android:text="22 December, 2021"
            android:fontFamily="@font/nunito_sans_regular"
            android:textSize="13dp"/>

        <TextView
            android:layout_width="89dp"
            android:layout_height="43dp"
            android:layout_marginTop="61dp"
            android:layout_marginLeft="22dp"
            android:text="Notes"
            android:lineHeight="42.64dp"
            android:fontFamily="@font/nunito_sans_regular"
            android:textColor="#1C2121"
            android:textStyle="bold"
            android:textSize="26dp"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="25dp"
            android:layout_marginTop="67dp"
            android:layout_marginLeft="346dp"
            android:src="@drawable/bacham"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv2"
        android:layout_width="365dp"
        android:layout_height="38dp"
        android:layout_marginTop="112dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="56.74dp"
            android:layout_height="23dp"
            android:layout_marginLeft="20.21dp"
            android:layout_marginTop="6.72dp"
            android:hint="Search"
            android:lineHeight="22.88dp"
            android:textSize="17.68dp" />
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="173dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="168dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:scaleType="centerCrop"
                android:src="@drawable/group_50" />
            <TextView
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="57dp"
                android:text="All notes"
                android:fontFamily="@font/nunito_sans_regular"
                android:textSize="@dimen/textSizeHome"
                android:lineHeight="23.06dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="168dp"
            android:layout_height="50dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cardView1"
            app:layout_constraintTop_toTopOf="@id/cardView1">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/favo"/>

            <TextView
                android:layout_width="93dp"
                android:layout_height="24dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="57dp"
                android:text="Favorites"
                android:fontFamily="@font/nunito_sans_regular"
                android:textSize="@dimen/textSizeHome"
                android:lineHeight="0.21dp"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="233dp"
        android:layout_marginLeft="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="168dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/hidden"/>
            <TextView
                android:layout_width="93dp"
                android:layout_height="24dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="57dp"
                android:text="Hidden"
                android:fontFamily="@font/nunito_sans_regular"
                android:textSize="@dimen/textSizeHome"
                android:lineHeight="0.21dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="168dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@id/cardView3"
            app:layout_constraintTop_toTopOf="@id/cardView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/trash"/>

            <TextView
                android:layout_width="93dp"
                android:layout_height="24dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="57dp"
                android:text="Trash"
                android:fontFamily="@font/nunito_sans_regular"
                android:textSize="@dimen/textSizeHome"
                android:lineHeight="0.21dp"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cs1"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/bottom_nav_color_selector"
        app:itemTextColor="@color/bottom_nav_color_selector"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>
